        const months = ["JAN", "FEB", "MAR","APR", "MAY", "JUN", "JUL", "AUG", "SEP", "OCT", "NOV", "DEC"];
        let formatted_date = ((date.getDate() > 9)?'':'0')+date.getDate()+ " " + months[date.getMonth()] + " " + date.getFullYear()
        return(formatted_date)
    }


