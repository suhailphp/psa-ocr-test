

    <!-- Main content -->
    <section class="content">


      <div class="error-page">

          {{#compare error.statusCode '==' '404'}}
                <h2 class="headline text-warning"> 404</h2>
                <div class="error-content">
                    <h3><i class="fas fa-exclamation-triangle text-warning"></i>
                        {{__ 'Oops, Page not found'}}</h3>
                    <p>{{{error.message}}}</p>
                </div>
          {{else compare error.statusCode '==' '401'}}

              <h2 class="headline text-danger"> 401</h2>
              <div class="error-content">
                  <h3><i class="fas fa-exclamation-triangle text-danger"></i>
                      {{__ "Oops, You don't have permission."}}</h3>
                  <p>{{{error.message}}}</p>
              </div>


          {{else}}

              <h2 class="headline text-danger"> 405</h2>
              <div class="error-content">
                  <h3><i class="fas fa-exclamation-triangle text-danger"></i>
                      {{{error.name}}}</h3>
                  <p>{{{error.message}}}</p>
              </div>


          {{/compare}}


        <!-- /.error-content -->
      </div>
      <!-- /.error-page -->
    </section>
